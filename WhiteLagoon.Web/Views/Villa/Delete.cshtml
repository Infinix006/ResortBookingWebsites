@model Villa

<div class="w-100 card border-0 p-4">
    <div class="card-header bg-success bg-gradient m-lg-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Delete Villa</h2>
            </div>
        </div>
    </div>

    <div class="card-body border p-4">
        <form method="post" class="row">
            <input hidden asp-for="Id" />
            <div class="col-10">
                <div class="p-3">
                    <div class="form-floating py-2 col-12">
                        <input asp-for="@Model.Name" class="form-control border shadow" disabled />
                        <label asp-for="Name" class="m-2"></label>
                    </div>

                    <div class="form-floating py-2 col-12">
                        <input asp-for="Description" class="form-control border shadow" disabled />
                        <label asp-for="Description" class="m-2"></label>
                    </div>

                    <div class="form-floating py-2 col-12">
                        <input asp-for="Price" class="form-control border shadow" disabled />
                        <label asp-for="Price" class="m-2"></label>
                    </div>

                    <div class="form-floating py-2 col-12">
                        <input asp-for="Sqft" class="form-control border shadow" disabled />
                        <label asp-for="Sqft" class="m-2"></label>
                    </div>

                    <div class="form-floating py-2 col-12">
                        <input asp-for="Occupancy" class="form-control border shadow" disabled />
                        <label asp-for="Occupancy" class="m-2"></label>
                    </div>

                    <div class="form-floating py-2 col-12">
                        <input asp-for="ImageUrl" class="form-control border shadow" hidden />
                        <input asp-for="ImageUrl" class="form-control border shadow" disabled />
                        <label asp-for="ImageUrl" class="m-2"></label>
                    </div>

                    <div class="row pt-2">
                        <div class="col-6 col-md-3">
                            <button type="submit" class="btn btn-danger w-100"><i class="bi bi-trash-fill"></i> Delete </button>
                        </div>
                        <div class="col-6 col-md-3">
                            <a asp-controller="Villa" asp-action="Index" class="btn btn-secondary w-100"> <i class="bi bi-x-circle"></i> Cancel </a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-2">
                <img src="@Model.ImageUrl" width="100%" style="border-radius: 5px; border: 1px solid #bbb9b9" />
            </div>
            
        </form>
    </div>
</div>

